extends layout

block content
    h1= manufacturer.name

    a(href=manufacturer.url+"/update" style="margin-right: 20px") Update manufacturer
    a(href=manufacturer.url+"/delete") Delete manufacturer

    p #[strong Description:] #{manufacturer.description}

    table.table
        tr.table-secondary
            th Name
            th Category
            th Stock
            th Price
        each pcpart in manufacturer_parts
            tr
                td 
                    a(href=pcpart.url) #{pcpart.name}
                td 
                    a(href=pcpart.category.url) #{pcpart.category.title}
                td #{pcpart.stock}
                td $ #{pcpart.price}