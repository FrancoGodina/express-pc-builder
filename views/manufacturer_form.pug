extends layout

block content
    h1 #{title}

    form(method="POST" action="")
        div.form-group
            label(for="name") Name:
            input#name.form-control( type="text", name="name" required="true" value=(undefined === manufacturer ? "" : manufacturer.name))
            label(for="description") Description:
            textarea#description.form-control( type="text" rows="3" name="description" required="true" value=(undefined === description ? "" : manufacturer.description))
        if isUpdating
            label(for="password") Password:
            input(type="password" name="password" id="password" required="true" )
        br
        button.btn.btn-primary(type="submit") Submit

    if errors
        ul
            for error in errors
                li!= error.msg