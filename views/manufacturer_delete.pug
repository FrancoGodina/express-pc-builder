extends layout

block content
    h1 #{title}: #{manufacturer.title}
    p= manufacturer.lifespan
    
    if manufacturer_parts.length
    
        p #[strong Delete the following parts before attempting to delete this manufacturer.]
    
        div(style='margin-left:20px;margin-top:20px')
    
        h6 Parts
    
        dl
        each pcpart in manufacturer_parts
            dt
                a(href=pcpart.url) #{pcpart.name}
            dd #{pcpart.description}
    
    else
        p Do you really want to delete this manufacturer?
    
        form(method='POST' action='')
            div.form-group
            input#manufacturerid.form-control(type='hidden',name='manufacturerid', required='true', value=manufacturer._id )

            label(for="password") Password:
            input(type="password" name="password" id="password" required="true" )
            br
            button.btn.btn-primary(type='submit') Delete